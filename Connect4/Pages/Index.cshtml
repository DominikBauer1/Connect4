        .withUrl("Hubs/User")
        .configureLogging(signalR.LogLevel.Information)
        .build();

    connection.start().then(function () {
        console.log("connected");
    });

    connection.on("ReceiveActiveUsers", (users) => {
        console.log(users);
    });
</script>