@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a asp-area="Identity" asp-page="/Account/Manage/Index" class="navbar-item" title="Manage">Hallo @UserManager.GetUserName(User)!</a>
    <a class="navbar-item" onclick="document.getElementById('logoutForm').submit()">
        Abmelden
    </a>
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-item"></form>
}
else
{
    <a asp-area="Identity" asp-page="/Account/Login" class="navbar-item">Login</a>
    <a asp-area="Identity" asp-page="/Account/Register" class="navbar-item">Registrieren</a>
}