@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "Two-factor authentication";
}

<section class="hero is-dark is-fullheight">
    <div class="hero-body">
        <div class="container has-text-centered">
            <div class="column is-4 is-offset-4">
                <h3 class="title">Zwei-Faktor-Authentifizierung</h3>
                <p class="subtitle">Gib deinen Authentifizierungscode ein.</p>
                <div class="box">
                    <form method="post">
                        <input asp-for="RememberMe" type="hidden" />
                        <div asp-validation-summary="All" class="help is-danger"></div>
                        <div class="field">
                            <div class="control">
                                <input asp-for="Input.TwoFactorCode" class="input" placeholder="Token" autofocus="" />
                                <span asp-validation-for="Input.TwoFactorCode" class="help is-danger"></span>
                            </div>
                        </div>
                        <div class="field is-pulled-left">
                            <label class="checkbox">
                                <input asp-for="Input.RememberMachine" type="checkbox">
                                Dieses Gerät merken
                            </label>
                        </div>
                        <button class="button is-primary is-fullwidth">Login</button>
                        <div class="field help">
                            Kein Zugriff auf Code? <a asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl">Anmdelen mit Wiederherstellungscode</a>
                        </div>
                    </form>
                </div>
                <p>
                    <a asp-page="./Login">Anmelden</a> &nbsp;·&nbsp;
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrieren</a>
                </p>
            </div>
        </div>
    </div>
</section>