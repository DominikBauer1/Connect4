@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Passwort vergessen";
}

<section class="hero is-dark is-fullheight">
    <div class="hero-body">
        <div class="container has-text-centered">
            <div class="column is-4 is-offset-4">
                <h3 class="title">Passwort vergessen?</h3>
                <p class="subtitle">Setze dein Passwort per E-Mail zurück.</p>
                <div class="box">
                    <form method="post">
                        <div asp-validation-summary="All" class="help is-danger"></div>
                        <div class="field">
                            <div class="control">
                                <input asp-for="Input.Email" class="input" placeholder="E-Mail Adresse" autofocus="" />
                                <span asp-validation-for="Input.Email" class="help is-danger"></span>
                            </div>
                        </div>
                        <button class="button is-primary is-fullwidth">Passwort zurücksetzen</button>
                    </form>
                </div>
                <p>
                    <a asp-page="./Login">Anmelden</a> &nbsp;·&nbsp;
                    <a asp-page="./Register">Registrieren</a> &nbsp;&nbsp;
                </p>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
