@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<section class="hero is-dark is-fullheight">
    <div class="hero-body">
        <div class="container has-text-centered">
            <div class="column is-4 is-offset-4">
                <h3 class="title">Anmelden</h3>
                <p class="subtitle">Melde dich bitte an.</p>
                <div class="box">
                    <form method="post">
                        <div asp-validation-summary="All" class="help is-danger"></div>
                        <div class="field">
                            <div class="control">
                                <input asp-for="Input.UserName" class="input" placeholder="E-Mail Adresse" autofocus="" />
                                <span asp-validation-for="Input.UserName" class="help is-danger"></span>
                            </div>
                        </div>

                        <div class="field">
                            <div class="control">
                                <input asp-for="Input.Password" class="input" placeholder="Passwort" />
                                <span asp-validation-for="Input.Password" class="help is-danger"></span>
                            </div>
                        </div>
                        <div class="field is-pulled-left">
                            <label class="checkbox">
                                <input asp-for="Input.RememberMe" type="checkbox">
                                Angemeldet bleiben
                            </label>
                        </div>
                        <button class="button is-primary is-fullwidth">Login</button>
                    </form>
                </div>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrieren</a> &nbsp;·&nbsp;
                    <a asp-page="./ForgotPassword">Passwort vergessen</a>
                </p>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
